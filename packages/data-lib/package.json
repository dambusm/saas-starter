{
  "private": true,
  "name": "@saas-starter/data-lib",
  "version": "1.0.0",
  "main": "src/index.ts",
  "scripts": {
    "update-sdk": "yarn introspect && yarn generate",
    "generate": "yarn openapi --input src/data-sources/directus/temp/oas.json --output src/data-sources/directus/api-codegen-sdk --useOptions",
    "introspect": "source '.env' && curl ${DIRECTUS_BASE_URL}/server/specs/oas -H \"Authorization: Bearer ${DIRECTUS_ADMIN_TOKEN}\" > src/data-sources/directus/temp/oas.json"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "16.11.6",
    "openapi-typescript-codegen": "0.11.8"
  },
  "peerDependencies": {
    "typescript": "*"
  }
}
